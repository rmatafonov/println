{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
    "types": ["jest"]
  },
  "include": [
    "src",
    "typings/**/*.d.ts",
    "./node_modules/@types",
    "server/render/hmr.ts"
  ],
  "exclude": ["**/*.js"]
}
